{
    "name": "mendoframework/filter",
    "description": "Mendo Filter Component",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Mathieu Decaffmeyer",
            "email": "mdecaffmeyer@gmail.com"
        }
    ],
    "keywords": [
        "mf", "mendoframework", "mendo framework",
        "filter", "sanitizer", "sanitize", "validator", "validate"
    ],
    "homepage": "https://github.com/mendoframework",
    "autoload": {
        "psr-4": {
            "Mendo\\Filter\\": "src/"
        }
    },
    "require": {
        "php": ">=5.6.0"
    },
    "suggest": {
        "mendoframework/translator": "Allows to translate the error messages",
        "ramsey/uuid": "Allows to validate UUIDs"
    },
    "require-dev": {
        "mendoframework/translator": "~1.0",
        "ramsey/uuid": "^3.0",
        "pimple/pimple": "3.0.*@dev",
        "phpunit/phpunit": "4.3.*@dev",
        "fabpot/php-cs-fixer": "*@dev"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.5.x-dev"
        }
    }
}
