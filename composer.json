{
    "name": "gobline/filter",
    "description": "Gobline Filter Component",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Mathieu Decaffmeyer",
            "email": "mdecaffmeyer@gmail.com"
        }
    ],
    "keywords": [
        "gobline", 
        "filter", "sanitizer", "sanitize", "validator", "validate"
    ],
    "homepage": "https://github.com/gobline",
    "autoload": {
        "psr-4": {
            "Gobline\\Filter\\": "src/"
        }
    },
    "require": {
        "php": ">=5.6.0"
    },
    "suggest": {
        "gobline/translator": "Allows to translate the error messages",
        "ramsey/uuid": "Allows to validate UUIDs"
    },
    "require-dev": {
        "gobline/translator": "~2.0",
        "ramsey/uuid": "^3.0",
        "phpunit/phpunit": "4.3.*@dev",
        "fabpot/php-cs-fixer": "*@dev"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
